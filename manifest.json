{
    "manifest_version": 2,
    "name": "Hae digi.kansalliskirjasto.fi:stä",
    "description": "Tekee haun valitusta tekstistä",
    "version": "1.0",
    "homepage_url": "https://digi.kansalliskirjasto.fi",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite",
        "webRequest"
    ],
    "browser_action": {
        "default_icon": "digikis.png"
    },
    "icons": {
        "48": "digikis_48.png",
        "128": "digikis_128.png"
    }
}